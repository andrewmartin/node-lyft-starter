doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="Content-Language", content="en_US")
    meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Lyft Web Starter Kit
    link(rel="shortcut icon", href="/favicon.png")
    link(rel="stylesheet" href="/styles/main.css" type="text/css")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js")

  body

    nav.navbar
      a.navbar-brand(href='#') Lyft Node Starter
      ul.nav.navbar-nav
        li.nav-item.active
          a.nav-link(href='/')
            | Home
    .container-fluid
      main.main
        .page-content
          block content
    script(src='/components/tether/dist/js/tether.js')
    script(src='/components/bootstrap/dist/js/bootstrap.js')
    script(src="/js/LogComponent.js")
    script(src="/js/MapComponent.js")
    script(src="/js/ApiComponent.js")
    script(src="/js/AppComponent.js")
    script(async, defer, src="https://maps.googleapis.com/maps/api/js?callback=window.MapComponent.onGoogleMapsResponse"+(GOOGLE_API_KEY?("&key="+GOOGLE_API_KEY):""))
